<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--入门servlet配置-->
    <servlet>
        <servlet-name>helloServlet</servlet-name>
        <servlet-class>HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>helloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <!--crud之add-->
    <servlet>
        <servlet-name>addPersonServlet</servlet-name>
        <servlet-class>crud.add.AddPersonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addPersonServlet</servlet-name>
        <url-pattern>/add/addPerson</url-pattern>
    </servlet-mapping>

    <!--crud之List-->
    <servlet>
        <servlet-name>listPersonServlet</servlet-name>
        <servlet-class>crud.ListPersonServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listPersonServlet</servlet-name>
        <url-pattern>/listPerson</url-pattern>
    </servlet-mapping>

    <!--crud之delete-->
    <servlet>
        <servlet-name>DeleteServlet</servlet-name>
        <servlet-class>crud.delete.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteServlet</servlet-name>
        <url-pattern>/deletePerson</url-pattern>
    </servlet-mapping>

    <!--crud之edit-->
    <servlet>
        <servlet-name>EditServlet</servlet-name>
        <servlet-class>crud.update.EditServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EditServlet</servlet-name>
        <url-pattern>/editPerson</url-pattern>
    </servlet-mapping>

    <!--crud之update-->
    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>crud.update.UpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/updatePerson</url-pattern>
    </servlet-mapping>

    <!--crud之ListJSP版-->
    <servlet>
        <servlet-name>listPersonJSPServlet</servlet-name>
        <servlet-class>crud.listJSP.ListPersonJSPServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listPersonJSPServlet</servlet-name>
        <url-pattern>/listJsp</url-pattern>
    </servlet-mapping>

</web-app>